/* components/form/index.wxss */
@import '../../iconfont/index.wxss';
.form-card{
  position: relative;
  z-index: 1;
}
.bg_mask{
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(10, 10, 10, 0.8);
}
.form{
  position: fixed;
  padding: 50rpx;
  background: #fff;
  width:70%;
  height: 300rpx;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
}
.form-list{
  display: flex;
  align-items: center;
  border: 1px solid #000;
  padding: 0 20rpx;
  margin-bottom: 26rpx;
  height: 80rpx;
}
.form-content{
  flex: 1;
  padding-left: 20rpx;
}
.btn{
  width: 70%;
  color: #fff;
  background: #ef5350;
}
.close{
  color: #fff;
  position: fixed;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  width: 50rpx;
  font-size: 50rpx;
  top: 50%; 
  left: 0;
  right: 0;
  bottom: 0; 
  margin: auto;
  border: 1px solid #fff;
  border-radius: 50%;
}